@model Aula2407.Models.Produto
@{
    ViewData["Title"] = "Cadastro Produto";

}
@* Codigo formulario cadastro produto *@
<div class="container">
    @* LINHA TITULO *@
    <div class="row">
        <div class="col text-center">
            <h1>Cadastro Produto</h1>
        </div>
    </div>
    @* LINHA NOME, QUANTIDADE, MARCA, TAMANHO, DATAVALIDADE, VALORUNITARIO *@
    <form method="post">
        <div class="row ">
            <div class="col">
                <label asp-for="Nome" class="col-sm-2 col-form-label fw-bold"></label>
                <input asp-for="Nome" class="form-control" id="Nome" type="text" />
            </div>

            <div class="col-lg-2">
                <label asp-for="Quantidade" class="col-form-label fw-bold"></label>
                <input asp-for="Quantidade" class="form-control" id="Quantidade" type="text" />
            </div>

            <div class="col-lg-2">
                <label asp-for="Marca" class="col-form-label fw-bold"></label>
                <input asp-for="Marca" class="form-control" id="Marca" type="text" />
            </div>

            <div class="col-lg-2">
                <label asp-for="Tamanho" class="col-form-label fw-bold"></label>
                <input asp-for="Tamanho" class="form-control" id="Tamanho" type="text" />
            </div>

            <div class="col-lg-2">
                <label asp-for="DataValidade" class="col-form-label fw-bold"></label>
                <input asp-for="DataValidade" class="form-control" id="DataValidade" type="text" />
            </div>

            <div class="col-lg-2">
                <label asp-for="ValorUnitario" class="col-form-label fw-bold"></label>
                <input asp-for="ValorUnitario" class="form-control" id="ValorUnitario" type="text" />
            </div>

        </div>
        <div class="row mt-3 justify-content-md-end">
            <div class="col-3 d-flex justify-content-end">
                <input type="submit" class="btn btn-outline-dark btn-lg" name="name" value="Cadastrar" />
            </div>
        </div>
    </form>
</div>
